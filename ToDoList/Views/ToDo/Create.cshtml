@model ToDoItem

@{
    ViewData["Title"] = "Dodaj nowe zadanie";
}

<div class="container mt-4">
    <h1 class="text-center">➕ Dodaj nowe zadanie</h1>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Tytuł</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Opis</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsCompleted" class="form-check-input" />
            <label asp-for="IsCompleted" class="form-check-label">Czy ukończone?</label>
        </div>

        <button type="submit" class="btn btn-success">Zapisz</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>
